<resources >
    <!-- Base application theme. -->
    <style name="Theme.GB_Calculator_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="numericButtonStyle">@style/Calculator_Button</item>
        <item name="actionButtonStyle">@style/Round_Button</item>
        <item name="android:background">@color/lightBackground</item>

        <item name="inputTextView">@style/Input_Text_View</item>
        <item name="outputTextView">@style/Output_Text_View</item>

        <item name="inputTextViewLand">@style/Input_Text_View_Land</item>
        <item name="outputTextViewLand">@style/Output_Text_View_Land</item>


   </style>
</resources>